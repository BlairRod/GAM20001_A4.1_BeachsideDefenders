public class GameOverScene : Scene
{
    private bool win;
    private int score;


    public GameOverScene(bool win, int score)
    {
        this.win = win;
        this.score = score;
    }


    public void Load()
    {
       
        if (win)
        {
            AddLabel("You Win! Score: " + score, new Vector2(100, 100));
        }
        else
        {
            AddLabel("Game Over! Your land was invaded", new Vector2(100, 100));
        }


        AddButton("Replay", new Vector2(100, 200), ReplayGame);
        AddButton("Main Menu", new Vector2(100, 300), GoToMainMenu);
        AddButton("Exit", new Vector2(100, 400), ExitGame);
    }

    private void ReplayGame()
    {
        SceneManager.SwitchToMainGameScene();
    }

    private void GoToMainMenu()
    {
        SceneManager.SwitchToMainMenuScene();
    }

    private void ExitGame()
    {
        Environment.Exit(0);
    }
}

